extends layout

block content
  h1= title

  ul
  each author in author_list
    li
      a(href=author.url) #{author.name}
      //| (#{author.date_of_birth} - #{author.date_of_death})
      //| (#{author.date_of_birth_yyyy_mm_dd} - #{author.date_of_death_yyyy_mm_dd})
      | (#{author.lifespan})

  else
    li There are no authors.